<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kjwon.foodchoice.json.mapper.FoodMapper">
    <select id="findByAll" resultType="com.kjwon.foodchoice.json.dto.RestaurantDto">
        select * from food;
    </select>

    <select id="findNearLocation" resultType="com.kjwon.foodchoice.json.dto.RestaurantDto">
        SELECT * FROM food AS c ORDER BY sqrt(power(latitude - #{latitude}, 2) + POWER(longitude - #{longitude},2)) ASC LIMIT #{number} OFFSET #{offset}
    </select>
</mapper>
